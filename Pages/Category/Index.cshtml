@page
@model blog_e17.Pages.Category.IndexModel
@{
    ViewData["Title"] = "Category";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <h3>Category List</h3>
            <a class="btn btn-success" asp-page="/category/create" role="button">Create</a>
        </div>
        <!-- Blog entries-->
        <div class="col-lg-12">
            @if(Model.Categories.Count() > 0) {
                <div class="card p-3">
                    <table id="datatable"
                    class="table table-striped"
                    style="width: 100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Category</th>
                                <th style="width: 200px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                                @foreach(var item in Model.Categories) {
                                    <tr>
                                        <td>@(++i)</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a class="btn btn-primary btn-sm"
                                               asp-page="/category/edit"
                                               asp-route-id="@item.Id"
                                               role="button">Edit</a>
                                            <button class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                        
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Tag</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            } else {
                <div class="border mt-3">
                    <p class="text-center">No Data</p>
                </div>

            }
            
        </div>
    </div>
</div>